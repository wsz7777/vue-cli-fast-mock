{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
